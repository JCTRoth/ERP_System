{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@erp/shared-types": ["libs/shared-types/src/index.ts"],
      "@erp/ui-components": ["libs/ui-components/src/index.ts"],
      "@erp/ui-builder": ["libs/ui-builder/src/index.ts"],
      "@erp/i18n": ["libs/i18n/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
